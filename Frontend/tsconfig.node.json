{
  "compilerOptions": {
    "target": "ES2022", 
    "lib": ["ES2023"], 
    "module": "ESNext",
    "skipLibCheck": true, 

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}

//This File is used to provide TypeScript support for Vite config and Vitest Config files in a Node.js environment.